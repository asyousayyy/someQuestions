#include <bits/stdc++.h>
using namespace std;

string helper(string &s){
    
    int n = s.size();
    stack<char> st;
    
    for(int i=0; i<n; i++){
        if(s[i]==')'){
            
            int count=0;
            
            while(!st.empty() && st.top()!='('){
                st.pop();
                count++;
            }
            
            if(st.empty()) return "Unbalanced"; //unbalanced string
            
            if(st.top()=='('){
                if(count > 0) st.pop();
                else if(count==0) return "Yes"; //no characters in between
            }
            
        }
        
        else{
            st.push(s[i]);
        }
        
    }
    
    return "No"; //no duplicates
    
}

int main()
{
    string s;
    cin>>s;
    
    cout<<helper(s)<<endl;

    return 0;
}
