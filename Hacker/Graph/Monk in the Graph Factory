#include <bits/stdc++.h>
using namespace std;

int main() {

    int num;
    cin >> num;    

    int sum = 0;
    vector<int> v(num);

    for(int i=0; i<num; i++){
        cin>>v[i];
        sum += v[i];
    }  

        if(sum == 2*(num-1))                                
        cout <<"Yes";   

        else
        cout<<"No";

        return 0;

    }

//IN TREE, THE SUM OF DEGREES OF ALL VERTICES IS EQUAL TO 2 * (no of vertices - 1)
