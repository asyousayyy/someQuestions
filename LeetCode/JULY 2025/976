class Solution {
public:
    int largestPerimeter(vector<int>& nums) {
        int n = nums.size();
        sort(nums.rbegin(), nums.rend());

        for(int i=0; i<n-2; i++){
            if((long long)nums[i] < (long long)nums[i+1] + nums[i+2]){
                return (long long)nums[i]+nums[i+1]+nums[i+2]; //further reduced
            }
        }

        return 0;
    }
};
