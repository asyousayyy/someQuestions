#include <bits/stdc++.h>
using namespace std;

bool ispalindrome(string &s, int low, int high){
    while(low<=high){
        if(s[low]!=s[high]) return false;
        else{
            low++;
            high--;
        }
    }
    return true;
}

bool helper(string &s){
    int n = s.size();
    
    if(n<=1) return true;
    
    int low = 0, high = n-1;
    
    while(low<=high){
        if(s[low]==s[high]){
            low++;
            high--;
        }
        
        if(s[low]!=s[high]){
            return ispalindrome(s,low+1,high)||ispalindrome(s,low,high-1);
        }
    }
    
    return true;
}

int main()
{
    string s;
    cin>>s;
    
    cout<<helper(s)<<endl;
    
    return 0;
}
