class Solution {
public:
    int addMinimum(string s) {
        int n = s.size();
        int cnt = 0;
        string temp = "abc";

        int i=0;

        for(char c : s){
            while(c != temp[i]){
                cnt++;
                i = (i+1)%3;
            }
            i = (i+1)%3;
        }

        if(i!=0) cnt += (3-i); //if i=0, then last mein c tha 

        return cnt;
    }
};
