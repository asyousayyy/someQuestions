class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {
        int n = nums.size();
        long long count = 0;

        vector<int> pre(n,0);
        if(nums[0]==0) pre[0] = 1;

        for(int i=1; i<n; i++){
            if(nums[i]==0){
                pre[i] = pre[i-1] + 1;
            }
            else{
                pre[i] = 0;
            }
        }

        for(int i=0; i<n; i++){
            count += pre[i];
        }

        return count;
    }
};
