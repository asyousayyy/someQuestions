#include <bits/stdc++.h>
using namespace std;

bool isprime(int n){
    if(n < 2) return false;
    for(int i=2; i*i <= n; i++){
        if(n%i == 0) return false;
    }
    return true;
}

int main(){
    int n;
    cin >> n;

    vector<pair<int,int>> edges;

    for(int i=1; i<=n; i++){
        edges.push_back({i, (i % n) + 1});
    }

    int m = n;

    int i = 1;
    while(!isprime(m)){
        edges.push_back({i, i + n/2});
        m++;
        i++;
    }

    cout << m << "\n";
    for(auto &e : edges){
        cout << e.first << " " << e.second << "\n";
    }

    return 0;
}
